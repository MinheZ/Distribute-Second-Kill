<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.minhe.seckill.dao.StockMapper">

    <update id="reduceCount">
        UPDATE `stock`
        SET count = count-1, sale = sale + 1
        WHERE id=#{id}
          AND start_time <![CDATA[<=]]> #{killTime}
          AND end_time >= #{killTime}
          AND count > 0;
    </update>

    <select id="queryById" resultType="com.minhe.seckill.api.pojo.Stock">
        SELECT * from `stock`
        WHERE id=#{id}
    </select>

</mapper>